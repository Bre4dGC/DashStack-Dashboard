<Application
    x:Class="DashStack_Dashboard.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DashStack_Dashboard"
    Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/Windows/Border.xaml" />

                <ResourceDictionary Source="Views/Styles/Colors/Themes/Light.xaml" />
                <ResourceDictionary Source="Views/Styles/Colors/Themes/Dark.xaml" />

                <ResourceDictionary Source="Views/Styles/Colors/BackgroundColors.xaml" />
                <ResourceDictionary Source="Views/Styles/Colors/ForegroundColors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
